{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Skelementor",
  "description": "CSS Utility Importer for Elementor v4 - Import utility classes directly into Elementor's Global Classes system",
  "colors": {
    "primary": "#3b82f6",
    "light": "#60a5fa",
    "dark": "#2563eb"
  },
  "favicon": "/logo/favicon.png",
  "css": "/custom.css",
  "logo": {
    "light": "/logo/wordmark-light.png",
    "dark": "/logo/wordmark-dark.png"
  },
  "hero": {
    "light": "/images/skele-light.png",
    "dark": "/images/skele-dark.png"
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "getting-started/quickstart",
              "getting-started/installation"
            ]
          },
          {
            "group": "Utility Framework",
            "pages": [
              "utility-framework/overview",
              "utility-framework/typography",
              "utility-framework/layout",
              "utility-framework/spacing",
              "utility-framework/sizing",
              "utility-framework/colors",
              "utility-framework/borders",
              "utility-framework/effects",
              "utility-framework/positioning",
              "utility-framework/flexbox",
              "utility-framework/components"
            ]
          },
          {
            "group": "Usage",
            "pages": [
              "usage/basic-usage",
              "usage/examples",
              "usage/best-practices",
              "usage/custom-css"
            ]
          },
          {
            "group": "CSS Reference",
            "pages": [
              "css-reference/supported-properties",
              "css-reference/writing-css",
              "css-reference/reserved-names"
            ]
          },
          {
            "group": "Troubleshooting",
            "pages": [
              "troubleshooting/common-errors",
              "troubleshooting/faq",
              "troubleshooting/support"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "href": "https://github.com/rajinkhan/skelementor",
          "icon": "github"
        },
        {
          "anchor": "WordPress.org",
          "href": "https://wordpress.org/plugins/skelementor",
          "icon": "wordpress"
        }
      ]
    }
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@skelementor.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Download Plugin",
      "href": "https://github.com/rajinkhan/skelementor/releases"
    }
  },
  "footer": {
    "socials": {
      "github": "https://github.com/rajinkhan/skelementor",
      "website": "https://wordpress.org/plugins/skelementor"
    }
  }
}